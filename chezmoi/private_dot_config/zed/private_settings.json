// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "button": false
  },
  "auto_indent_on_paste": false,
  "auto_install_extensions": {
    "basher": true,
    "crystal": true,
    "cspell": true,
    "docker": true,
    "docker-compose": true,
    "dockerfile": true,
    "html": true,
    "just": true,
    "make": true,
    "php": true,
    "sublime-mariana-theme": true,
    "terraform": true,
    "typos": true
  },
  "base_keymap": "SublimeText",
  "buffer_font_size": 14,
  "collaboration_panel": {
    "button": false
  },
  "diagnostics": {
    "button": false,
    "include_warnings": true,
    "inline": {
      "enabled": true
    }
  },
  "diagnostics_max_severity": "hint",
  "disable_ai": true,
  "file_types": {
    "Dockerfile": ["Dockerfile.*"],
    "YAML": ["shard.lock"]
  },
  "languages": {
    "Crystal": {
      "extend_comment_on_newline": false,
      "formatter": {
        "external": {
          "arguments": ["tool", "format", "-"],
          "command": "crystal"
        }
      },
      "language_servers": ["ameba-ls", "typos", "cspell"]
    },
    "PHP": {
      "language_servers": ["phpactor", "typos", "cspell"]
    },
    "Ruby": {
      "language_servers": ["solargraph", "rubocop", "typos", "cspell"]
    },
    "Terraform": {
      "formatter": {
        "external": {
          "arguments": ["fmt", "-"],
          "command": "terraform"
        }
      }
    },
    "YAML": {
      "formatter": "language_server"
    }
  },
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "format": {
            "printWidth": 999, // Disable this
            "singleQuote": true
          }
        }
      }
    }
  },
  "minimap": {
    "show": "always"
  },
  "outline_panel": {
    "dock": "right"
  },
  "scrollbar": {
    "diagnostics": "none"
  },
  "search": {
    "button": false
  },
  "show_whitespaces": "all",
  "show_wrap_guides": true,
  "tab_size": 2,
  "theme": {
    "dark": "One Dark",
    "light": "Sublime Mariana",
    "mode": "system"
  },
  "ui_font_family": "Roboto Mono",
  "ui_font_size": 14
}
